@model AiXinYaoYeV2.Database.UserProfile
<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>个人中心</title>
    <link href="~/css/app.css" rel="stylesheet" media="all"/>
    <link href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
    <script type="text/javascript" src="~/js/jquery.min.js"></script>
    <style>
        p { margin: 0; }
    </style>
</head>

<body style="background: #e8e8e8; overflow: hidden; height: 100%; width: 100%; position: fixed;">
<header style="display: block; background-color: rgba(253, 3, 5, 0.808); border: 0;" class="bar bar-nav">
    <h1 class="title">个人中心</h1>
</header>
<div style="height: 34%; margin: 67px 20px 5px 20px; background-image: url('/image/beijing.png'); background-size: 100% 100%; border-radius: 7px; position: relative;    text-shadow: 1px 1px 1px #333;">
    <div style="display: flex; align-items: center; padding: 1.2rem;">
        <img src="/image/favicon.jpg" style="width: 2.8rem; height: 2.8rem; border-radius: 1.4rem;">
        <span style="color: #fff; font-size: 1.2rem; height: 100%; margin-left: 0.5rem; text-align: center;">爱心药业</span>
    </div>
    <div onclick="location.href='@Url.Action("QrCode")'" class="fa fa-qrcode" style="font-size: 2rem; position: absolute; right: 2rem; top: 1.5rem; color: white;"></div>
    <span style="position: absolute; font-size: 1.4rem; bottom: 1.2rem; left: 1.5rem;color: #ccc;">18911223344</span>
</div>
<div style="margin: 0; line-height: 40px;">
    <table style="text-align: center; width: 100%; padding: 10px; background: #e8e8e8">
        <tr style="width: 100%; line-height: 30px; font-size: 13px;">
            <td style="width: 50%;">积分</td>
            <td style="width: 50%;">余额</td>
        </tr>
        <tr style="width: 100%; line-height: 40px; font-size: 22px;">
            <td style="width: 50%; color: rgb(253, 3, 5);" id="bonus">?</td>
            <td style="width: 50%; color: rgb(253, 3, 5);" id="balance">?</td>
        </tr>
    </table>
</div>
<div style="background: #ffffff; margin: 0px 5px 0px 5px; line-height: 40px; border-radius: 10px;">
    <p style="margin-left: 10px; display: inline;">&nbsp;<i class="fa fa-user" style="color: #F08080;"></i>&nbsp;&nbsp;会员姓名：</p>
    <p id="name" style="display: inline;">?</p>
</div>
<div style="background: #ffffff; margin: 8px 5px 0px 5px; line-height: 40px; border-radius: 10px;">
    <p style="margin-left: 10px; display: inline;"><i class="fa fa-id-card" style="color: #1E90FF;"></i> 会员编号：</p>
    <p style="display: inline;" id="cardNo">?</p>
</div>
<div style="background: #ffffff; margin: 8px 5px 0px 5px; line-height: 40px; border-radius: 10px;" onclick="location.href='@Url.Action("QrCode")'">
    <p style="margin-left: 10px;"><i class="fa fa-qrcode" style="color: #228B22;"></i>&nbsp;&nbsp;公众号</p>
</div>
<script>
    $(document).ready(function() {
        $.get('@Url.Action("GetUserProfile")',
            function(response) {
                if (!response.success) {
                    location.href = '@Url.Action("Connect")';
                } else {
                    var userProfile = response.userInfo;
                    $('#bonus').html(userProfile.bonus);
                    $('#balance').html(userProfile.balance);
                    $('#name').html(userProfile.name);
                    $('#cardNo').html(userProfile.cardNum);
                }
            });
    });
</script>
</body>

</html>