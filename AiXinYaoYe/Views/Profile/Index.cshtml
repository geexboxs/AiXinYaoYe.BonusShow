@model AiXinYaoYe.Database.UserProfile
<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>个人中心</title>
    <link href="~/Content/css/app.css" rel="stylesheet" media="all" />
    <link href="~/Content/css/amazeui.min.css" rel="stylesheet" media="all" />
    <link href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
    <script type="text/javascript" src="~/Content/js/jquery.min.js"></script>
    <style>
        div {
            background: #fff
        }

        p {
            margin: 0;
        }
    </style>
</head>

<body style="background:#e8e8e8;">
    <header style="display: block; background-color: rgba(253, 3, 5, 0.808);border:0;" class="bar bar-nav">
        <h1 class="title">个人中心</h1>
    </header>
    <div style="height:32%;margin:67px 20px 15px 20px;background-image:url(@Url.Content("~/Content/image/beijing.png"));background-size:100% 100%;border-radius:7px;">
        <img src="@Url.Content("~/Content/image/favicon.jpg")" style="width:80px;height:80px;border-radius:60px;padding:20px 0 0 20px;">
        <span style="color:#fff;font-size:20px;width:200px;height:40px;margin:10px;">爱心药业</span>
        <span style="position:absolute;top:28%;left:40px;font-size:18px;transform:translateY(-50%);">18911223344</span>
    </div>
    <div style="margin:0;line-height:40px;">
        <table style="text-align:center;width:100%;padding:10px;background:#e8e8e8">
            <tr style="width:100%;line-height:30px;font-size:13px;">
                <td style="width:50%;">积分</td>
                <td style="width:50%;">储值余额</td>
            </tr>
            <tr style="width:100%;line-height:40px;font-size:22px;">
                <td style="width:50%;color:	rgb(253,3,5);">@Model.Bonus</td>
                <td style="width:50%;color:	rgb(253,3,5);">@Model.Balance.ToString("0.00")</td>
            </tr>
        </table>
    </div>
    <div style="margin:18px 5px 0px 5px;line-height:40px;border-radius:10px;">
        <p style="margin-left:10px;display:inline;">&nbsp;<i class="fa fa-user" style="color:#F08080;"></i>&nbsp;&nbsp;会员姓名：</p><p style="display:inline;">@Model.Name</p>
    </div>
    <div style="margin:8px 5px 0px 5px;line-height:40px;border-radius:10px;">
        <p style="margin-left:10px;display:inline;"><i class="fa fa-id-card" style="color:#1E90FF;"></i> 会员编号：</p><p style="display:inline;">@Model.CardNum</p>
    </div>
    <div style="margin:8px 5px 0px 5px;line-height:40px;border-radius:10px;">
        <p style="margin-left:10px;"><i class="fa fa-qrcode" style="color:#228B22;"></i>&nbsp;&nbsp;公众号</p>
    </div>
</body>

</html>